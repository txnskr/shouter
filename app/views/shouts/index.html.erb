<h1>Listing shouts</h1>

<table>
  <tr>
    <th>Shout Id</th>
    <th>Message</th>
    <th>Posted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shouts.each do |shout| %>
  <tr>

    <td><%= shout.user_id %></td>
    <td><%= shout.message %></td>
    <td><%= display_date(shout.created_at) %></td>
  <!--   <td><%= time_ago_in_words(shout.created_at) %></td> -->
    <td><%= link_to 'Show', shout %></td>
    <td><%= link_to 'Edit', edit_shout_path(shout) %></td>
    <td><%= link_to 'Destroy', shout, method: :delete, data: { confirm: 'Are you sure?' } %></td>

  </tr>
<% end %>
</table>

